<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f3da0"
    android:orientation="vertical"
    android:padding="10dp">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelBtn"
        android:onClick="cancelNewPost"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/helloTxt"
        android:layout_toStartOf="@+id/helloTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="heloo"
        android:id="@+id/helloTxt"
        android:layout_above="@+id/cancelBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Post"
        android:id="@+id/addPostBtn"
        android:layout_alignTop="@+id/cancelBtn"
        android:layout_alignLeft="@+id/helloTxt"
        android:layout_alignStart="@+id/helloTxt"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:onClick="addNewPost" />

</RelativeLayout>